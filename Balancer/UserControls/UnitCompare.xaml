            <Label Grid.Row="27" Grid.Column="0" Content="Torpedo:" FontWeight="Bold" HorizontalAlignment="Right">
                <Label.ToolTip>
                    <ToolTip Content="Hardpoints of type 'HARD_POINT_WEAPON_TORPEDO'"/>
                </Label.ToolTip>
            </Label>
            <Label Grid.Row="28" Grid.Column="0" Content="Ion:" FontWeight="Bold" HorizontalAlignment="Right">
                <Label.ToolTip>
                    <ToolTip Content="Hardpoints of type 'HARD_POINT_WEAPON_ION_CANNON'"/>
                </Label.ToolTip>
            </Label>





            <Label Grid.Row="29" Grid.Column="0" Content="* Total Damage over 30 sec:" FontWeight="Bold" HorizontalAlignment="Right"/>

