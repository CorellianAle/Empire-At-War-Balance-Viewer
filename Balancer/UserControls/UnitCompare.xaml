            </Label>
            <Label Grid.Row="32" Grid.Column="0" Content="Torpedo:" FontWeight="Bold" HorizontalAlignment="Right">
                <Label.ToolTip>
                    <ToolTip Content="Hardpoints of type 'HARD_POINT_WEAPON_TORPEDO'"/>
                </Label.ToolTip>
            </Label>
            <Label Grid.Row="33" Grid.Column="0" Content="Ion:" FontWeight="Bold" HorizontalAlignment="Right">
                <Label.ToolTip>
                    <ToolTip Content="Hardpoints of type 'HARD_POINT_WEAPON_ION_CANNON'"/>
                </Label.ToolTip>
            </Label>
            
            
            
            
            
            <Label Grid.Row="34" Grid.Column="0" Content="* Total Damage over 60 sec:" FontWeight="Bold" HorizontalAlignment="Right"/>

            <Label Grid.Row="35" Grid.Column="0" Content="Laser:" FontWeight="Bold" HorizontalAlignment="Right">
                <Label.ToolTip>
                    <ToolTip Content="Hardpoints of type 'HARD_POINT_WEAPON_LASER'"/>
                </Label.ToolTip>
            </Label>
            <Label Grid.Row="36" Grid.Column="0" Content="Missle:" FontWeight="Bold" HorizontalAlignment="Right">
                <Label.ToolTip>
                    <ToolTip Content="Hardpoints of type 'HARD_POINT_WEAPON_MISSILE'"/>
                </Label.ToolTip>
            </Label>
            <Label Grid.Row="37" Grid.Column="0" Content="Torpedo:" FontWeight="Bold" HorizontalAlignment="Right">
                <Label.ToolTip>
                    <ToolTip Content="Hardpoints of type 'HARD_POINT_WEAPON_TORPEDO'"/>
                </Label.ToolTip>
            </Label>
            <Label Grid.Row="38" Grid.Column="0" Content="Ion:" FontWeight="Bold" HorizontalAlignment="Right">
                <Label.ToolTip>
                    <ToolTip Content="Hardpoints of type 'HARD_POINT_WEAPON_ION_CANNON'"/>
                </Label.ToolTip>
